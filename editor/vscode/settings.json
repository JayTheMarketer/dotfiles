php{

/*
--------------------------------------
------------ VS Code Core ------------
--------------------------------------
*/


// Editor
  "editor.fontFamily":
    "'SauceCodePro Nerd Font', 'Consolas for Powerline', 'Mononoki Nerd Font', 'Fira Mono', Menlo",
  "editor.fontLigatures": true,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.wordWrap": "bounded",
  "editor.wrappingIndent": "indent",
  "editor.multiCursorModifier": "alt",
  "editor.snippetSuggestions": "top",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.renderIndentGuides": false,
  "editor.colorDecorators": false,
  "editor.tabSize": 2,
  "editor.matchBrackets": false,

// Workbench
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.swipeToNavigate": true,

// Window
  "window.nativeTabs": true,

// Files
  "files.insertFinalNewline": true,
  "files.defaultLanguage": "markdown",

// Trailing Spaces
  "trailing-spaces.trimOnSave": true,

// File Explorer
  "explorer.sortOrder": "type",
  "explorer.confirmDelete": false,

// Search
  "search.exclude": {
    "**/node_modules": false,
    "**/bower_components": false
  },
  "search.quickOpen.includeSymbols": true,

// Debug
  "debug.openExplorerOnEnd": true,

// Guides
  "guides.active.gutter": true,
  "guides.sendUsagesAndStats": false,

// Terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableBell": true,
  "terminal.integrated.fontFamily": "SauceCodePro Nerd Font",
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "terminal.integrated.scrollback": 30000,

// File Associations
  "files.associations": {
    "*shell*": "shellscript",
    "*zsh*": "shellscript",
    "*zstyle*": "shellscript",
    "*bash*": "shellscript",
    "*zplug*": "shellscript",
    "*vim*": "viml",
    "*git*": "properties",
    "*.env": "properties",
    "*.css": "css",
  },


/*
--------------------------------------
------------- Languages --------------
--------------------------------------
*/


// HTML
  "html.format.endWithNewline": true,
  "html.format.extraLiners": "style, head, header, body, /html, /body",

// (S)CSS
  "scss.lint.important": "warning",
  "autoprefixer.formatOnSave": true,

// Markdown
  "markdown.styles": [
    "https://raw.githubusercontent.com/sindresorhus/github-markdown-css/gh-pages/github-markdown.css"
  ],
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true
  },
  "markdown-preview-enhanced.mermaidTheme": "mermaid.dark.css",

// Ruby
  "ruby.lint": {
    "rubocop": true,
    "ruby": true // Runs ruby -wc
  },

// JavaScript
  "javascript.implicitProjectConfig.checkJs": true,
  "prettier.eslintIntegration": true,
  "prettier.singleQuote": true,
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue"
  ],
  "eslint.options": {
    "extensions": [
      ".js",
      ".vue",
      ".jsx"
    ]
  },

  // PHP
  "php.suggest.basic": false,
  "php.validate.run": "onType",
  "phpcs.standard": "Wordpress",
  "phpcs.showSources": true,
  "phpcbf.onsave": true,
  "phpcbf.standard": "Wordpress",

  // Python
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,

// Shell
  "shellformat.path": "/usr/local/bin/shfmt",
  "shellcheck.executablePath": "/usr/local/bin/shellcheck",

// YAML
  "yaml.format.enable": true,


/*
--------------------------------------
-------------- Plugins ---------------
--------------------------------------
*/


// Git
  "git.enableCommitSigning": true,
  "git.enableSmartCommit": true,
  "gitlens.historyExplorer.enabled": true,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

// NPM
  "npm-intellisense.scanDevDependencies": true,
  "npm-intellisense.packageSubfoldersIntellisense": true,
  "npm-intellisense.showBuildInLibs": true,
  "npm.packageManager": "yarn",


// Color Highlight
  "color-highlight.matchWords": true,

// Code-runner
  "code-runner.runInTerminal": true,

// Problems
  "problems.decorations.enabled": true,

// Telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

// Auto Close Tag Config
  "auto-close-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb"
  ],
  "auto-close-tag.SublimeText3Mode": true,

// Emmet
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
      "javascript": "javascriptreact",
      "vue-html": "html",
      "plaintext": "jade"
    },

// Project Manager
  "projectManager.git.baseFolders": [
    "~/git-repos",
    "~/dotfiles"
  ],

// Live Server
  "liveServer.settings.ChromeDebuggingAttachment": true,

// Bracket Pair Colorizer
  "bracketPairColorizer.forceIterationColorCycle": true,
  "bracketPairColorizer.forceUniqueOpeningColor": true,
  "bracketPairColorizer.highlightActiveScope": true,
  "bracketPairColorizer.activeScopeCSS": [
    "borderStyle : solid",
    "borderWidth : 1px",
    "borderColor : {color}; opacity: 0.5",
    "backgroundColor : {color}"
  ],
}
