{
/*
!---------------------------------------!
?----------------VS Core----------------?
!---------------------------------------!
*/

// Workbench
  "workbench.colorTheme": "Oceanic Next (dimmed bg)",
  "workbench.colorCustomizations": {
    "statusBar.background": "#56006b",
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",

// Editor
  "editor.fontFamily": "'Fira Code iScript', 'SauceCodePro Nerd Font', Menlo",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.wordWrap": "bounded",
  "editor.wrappingIndent": "indent",
  "editor.multiCursorModifier": "alt",
  "editor.snippetSuggestions": "top",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.renderIndentGuides": false,
  "editor.tabSize": 2,
  "editor.matchBrackets": "always",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "emphasis",
          "comment",
          "storage",
          "keyword.control",
          "keyword.operator.expression.delete",
          "variable.language",
          "entity.other.attribute-name",
          "tag.decorator.js entity.name.tag.js",
          "tag.decorator.js punctuation.definition.tag.js",
          "source.js constant.other.object.key.js string.unquoted.label.js",
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },

// Window
  "window.nativeTabs": true,

// Files
  "files.insertFinalNewline": true,
  "files.defaultLanguage": "markdown",

// File Explorer
  "explorer.sortOrder": "type",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

// Search
  "search.exclude": {
    "**/node_modules": false,
    "**/bower_components": false
  },
  "search.quickOpen.includeSymbols": true,

// Debug
  "debug.openExplorerOnEnd": true,

// Guides
  "guides.active.gutter": true,
  "guides.sendUsagesAndStats": false,

// Terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableBell": true,
  "terminal.integrated.fontFamily": "FuraCode Nerd Font",
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "terminal.integrated.scrollback": 30000,

/*
!---------------------------------------!
?---------------Languages---------------?
!---------------------------------------!
*/

// HTML
  "html.format.endWithNewline": true,
  "html.format.extraLiners": "style, head, header, body, /html, /body",

// (S)CSS
  "css.validate": false, // disable in favor of stylelint
  "less.validate": false, // disable in favor of stylelint
  "scss.validate": false, // disable in favor of stylelint

// Markdown
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true
  },

// Ruby
  "ruby.lint": {
    "rubocop": true,
    "ruby": true // Runs ruby -wc
  },

// JavaScript
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.useTabStops": false
  },
  "javascript.implicitProjectConfig.checkJs": true,

// PHP
  "[php]": {
    "editor.detectIndentation": true,
    "editor.useTabStops": true,
    "editor.insertSpaces": false
  },
  "php.suggest.basic": false,
  "php.validate.run": "onType",
  "phpcs.standard": "Wordpress",
  "phpcs.showSources": true,
  "phpcbf.onsave": true,
  "phpcbf.standard": "Wordpress",

// Python
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,

// Shell
  "shellformat.path": "/usr/local/bin/shfmt",
  "shellcheck.executablePath": "/usr/local/bin/shellcheck",

// YAML
  "yaml.format.enable": true,

// JSON
  "[json]": {
    "editor.formatOnSave": false
  },

// JSON with Comments
  "[jsonc]": {
    "editor.formatOnSave": false
  },

// XML
  "[xml]": {
    "editor.formatOnSave": false
  },

// Fish
  "[fish]": {
    "editor.formatOnSave": false
  },

/*
!---------------------------------------!
?----------------Plugins----------------?
!---------------------------------------!
*/

// Git
  "git.enableCommitSigning": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

// NPM
  "npm-intellisense.scanDevDependencies": true,
  "npm-intellisense.packageSubfoldersIntellisense": true,
  "npm-intellisense.showBuildInLibs": true,

// Rest
  "rest-client.fontFamily": "'Fira Code iScript', 'SauceCodePro Nerd Font', Menlo",
  "rest-client.fontSize": 12,

// Prettier
  "prettier.semi": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 70,
  "prettier.singleQuote": true,

// ESLint
  "eslint.enable": true,
  "eslint.options": {
    "extensions": [
      ".js",
      ".vue",
      ".jsx"
    ],
    "configFile": "/Users/jschwartz/.eslintrc.json"
  },

// Vetur
  "vetur.format.defaultFormatter.html": "js-beautify-html",

// Code-runner
  "code-runner.runInTerminal": true,

// Problems
  "problems.decorations.enabled": true,

// Auto Close Tag Config
  "auto-close-tag.activationOnLanguage": ["*"],
  "auto-close-tag.SublimeText3Mode": true,

// Emmet
  "html-css-class-completion.enableEmmetSupport": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "jade"
  },

// Project Manager
  "projectManager.git.baseFolders": ["~/git-repos", "~/dotfiles"],

// Live Server
  "liveServer.settings.host": "localhost",

// Trailing Spaces
  "trailing-spaces.trimOnSave": true,

// Bracket Pair Colorizer
  "bracketPairColorizer.forceIterationColorCycle": true,
  "bracketPairColorizer.forceUniqueOpeningColor": true,
  "bracketPairColorizer.highlightActiveScope": true,
  "bracketPairColorizer.activeScopeCSS": [
    "borderStyle : solid",
    "borderWidth : 1px",
    "borderColor : {color}; opacity: 0.5",
    "backgroundColor : {color}"
  ],

// Better Comments
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      "tag": "//",
      "color": "#4b5760",
      "strikethrough": true
    },
    {
      "tag": "!",
      "color": "#FF2D00"
    },
    {
      "tag": "?",
      "color": "#3498DB"
    },
    {
      "tag": "*",
      "color": "#b478ed"
    },
    {
      "tag": "TODO",
      "color": "#4b5760",
      "backgroundColor": "#FF8C00"
    },
    {
      "tag": "FIXME",
      "color": "#4b5760",
      "backgroundColor": "#FF2D00"
    }
  ]
}
